---
import { ModeToggle } from "@/components/common/ModeToggle";
import { Button } from "@/components/ui/button";
import Layout from "../layouts/Layout.astro";

interface Props {
  pageTitle?: string;
  userName?: string;
}

const { pageTitle = "Smart Recipe Mate", userName = "User" } = Astro.props;
---

<Layout title={pageTitle}>
  <div class="bg-background flex flex-col min-h-screen">
    <header class="border-b border-border">
      <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold">
          <a href="/">Smart Recipe Mate</a>
        </h1>
        <div class="flex items-center gap-4">
          <span class="text-sm text-muted-foreground">Witaj, {userName}</span>
          <ModeToggle client:idle />
          <Button variant="outline" asChild>
            <a href="/api/auth/logout">Wyloguj siÄ™</a>
          </Button>
        </div>
      </div>
    </header>

    <main class="flex-1">
      <slot />
    </main>
  </div>
</Layout>
