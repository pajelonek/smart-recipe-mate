---
import { ModeToggle } from "@/components/common/ModeToggle";
import { LogoutButton } from "@/components/common/LogoutButton";
import Layout from "../layouts/Layout.astro";

interface Props {
  pageTitle?: string;
  userName?: string;
}

const { pageTitle = "Smart Recipe Mate", userName = "User" } = Astro.props;
---

<Layout title={pageTitle}>
  <div class="bg-background flex flex-col">
    <header class="border-b border-border">
      <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
        <div class="flex items-center gap-4">
          <a href="/" class="flex items-center gap-4">
            <img src="/favicon.png" alt="Smart Recipe Mate logo" class="w-8 h-8" />
            <h1 class="text-2xl font-bold">Smart Recipe Mate</h1>
          </a>
        </div>
        <div class="flex items-center gap-4">
          <span class="text-sm text-muted-foreground">Witaj, {userName}</span>
          <ModeToggle client:idle />
          <LogoutButton client:idle />
        </div>
      </div>
    </header>

    <main class="flex-1">
      <slot />
    </main>
  </div>
</Layout>
