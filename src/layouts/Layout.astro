---
import "../styles/global.css";
import { Toaster } from "sonner";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Smart Recipe Mate</title>
    <script is:inline>
      const getThemePreference = () => {
        if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
          return localStorage.getItem("theme");
        }
        return window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
      };
      const isDark = getThemePreference() === "dark";
      document.documentElement.classList[isDark ? "add" : "remove"]("dark");

      if (typeof localStorage !== "undefined") {
        const observer = new MutationObserver(() => {
          const isDark = document.documentElement.classList.contains("dark");
          localStorage.setItem("theme", isDark ? "dark" : "light");
        });
        observer.observe(document.documentElement, { attributes: true, attributeFilter: ["class"] });
      }
    </script>
  </head>
  <body class="min-h-screen flex flex-col">
    <div class="flex-1">
      <slot />
    </div>
    <Toaster position="bottom-left" richColors client:idle />
    <footer class="border-t border-border py-6">
      <div class="mx-auto px-6 text-center text-muted-foreground">
        <p>&copy; {new Date().getFullYear()} Smart Recipe Mate. Wszystkie prawa zastrze≈ºone.</p>
      </div>
    </footer>
  </body>
</html>
